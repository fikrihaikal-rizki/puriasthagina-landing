---
import { Image } from "astro:assets";
import banner3 from "../../assets/bg_banner_3.webp";
import searchBar from "../../assets/search_bar.webp";
import facility1 from "../../assets/facility_1.webp";
import facility2 from "../../assets/facility_2.webp";
import facility3 from "../../assets/facility_3.webp";
import facility4 from "../../assets/facility_4.webp";
import facility5 from "../../assets/facility_5.webp";
import facility6 from "../../assets/facility_6.webp";
import whiteLogoText from "../../assets/white_logo_with_text.webp";
---

<div class="w-screen h-screen relative">
  <div
    class="absolute h-full w-full flex flex-col justify-between items-center py-10"
  >
    <Image
      class="z-40 w-4/6 md:w-3/12"
      src={whiteLogoText}
      alt="Fasilitas Puri Asthagina."
    />
    <div class="inline-flex z-40 w-5/6 md:w-6/12 items-center justify-center">
      <Image
        class="w-full"
        src={searchBar}
        alt="Fasilitas Puri Asthagina."
        decoding="async"
        loading="lazy"
      />
      <p
        class="absolute font-['Poppins'] text-white text-center text-shadow-sm text-lg md:text-xl lg:text-2xl xl:text-4xl"
      >
        Semua ada disini
      </p>
    </div>
    <div
      class="pb-10 w-screen h-fit flex flex-row justify-between overflow-x-scroll hide-scroll-x"
    >
      <div
        class="w-40 min-w-40 h-fit md:w-50 md:min-w-50 mx-5 pb-1 font-['Poppins'] text-center bg-white rounded-3xl lg:rounded-4xl shadow-2xl"
      >
        <Image
          class="w-full h-40 md:h-50 aspect-square object-center object-cover border-4 border-white rounded-3xl lg:rounded-4xl z-100"
          src={facility1}
          alt="Fasilitas Puri Asthagina."
          decoding="async"
          loading="lazy"
        />
        <span class="px-1 text-sm font-bold">Entry Access Card</span>
      </div>
      <div
        class="w-40 min-w-40 h-fit md:w-50 md:min-w-50 mx-5 pb-1 font-['Poppins'] text-center bg-white rounded-3xl lg:rounded-4xl shadow-2xl"
      >
        <Image
          class="w-full h-40 md:h-50 aspect-square object-center object-cover border-4 border-white rounded-3xl lg:rounded-4xl z-100"
          src={facility6}
          alt="Fasilitas Puri Asthagina."
          decoding="async"
          loading="lazy"
        />
        <span class="px-1 text-sm font-bold">One Gate System</span>
      </div>
      <div
        class="w-40 min-w-40 h-fit md:w-50 md:min-w-50 mx-5 pb-1 font-['Poppins'] text-center bg-white rounded-3xl lg:rounded-4xl shadow-2xl"
      >
        <Image
          class="w-full h-40 md:h-50 aspect-square object-center object-cover border-4 border-white rounded-3xl lg:rounded-4xl z-100"
          src={facility2}
          alt="Fasilitas Puri Asthagina."
          decoding="async"
          loading="lazy"
        />
        <span class="px-1 text-sm font-bold">Puri Pendopo</span>
      </div>
      <div
        class="w-40 min-w-40 h-fit md:w-50 md:min-w-50 mx-5 pb-1 font-['Poppins'] text-center bg-white rounded-3xl lg:rounded-4xl shadow-2xl"
      >
        <Image
          class="w-full h-40 md:h-50 aspect-square object-center object-cover border-4 border-white rounded-3xl lg:rounded-4xl z-100"
          src={facility3}
          alt="Fasilitas Puri Asthagina."
          decoding="async"
          loading="lazy"
        />
        <span class="px-1 text-sm font-bold">Jogging Track</span>
      </div>
      <div
        class="w-40 min-w-40 h-fit md:w-50 md:min-w-50 mx-5 pb-1 font-['Poppins'] text-center bg-white rounded-3xl lg:rounded-4xl shadow-2xl"
      >
        <Image
          class="w-full h-40 md:h-50 aspect-square object-center object-cover border-4 border-white rounded-3xl lg:rounded-4xl z-100"
          src={facility4}
          alt="Fasilitas Puri Asthagina."
          decoding="async"
          loading="lazy"
        />
        <span class="px-1 text-sm font-bold">Mini Garden</span>
      </div>
      <div
        class="w-40 min-w-40 h-fit md:w-50 md:min-w-50 mx-5 pb-1 font-['Poppins'] text-center bg-white rounded-3xl lg:rounded-4xl shadow-2xl"
      >
        <Image
          class="w-full h-40 md:h-50 aspect-square object-center object-cover border-4 border-white rounded-3xl lg:rounded-4xl z-100"
          src={facility5}
          alt="Fasilitas Puri Asthagina."
          decoding="async"
          loading="lazy"
        />
        <span class="px-1 text-sm font-bold">CCTV</span>
      </div>
    </div>
    <Image
      class="absolute object-cover object-left h-screen -z-40 top-0"
      src={banner3}
      alt="Fasilitas Puri Asthagina."
      decoding="async"
      loading="lazy"
    />
  </div>
  <style>
    .hide-scroll-x {
      overflow-x: scroll; /* Add the ability to scroll */
    }

    /* Hide scrollbar for Chrome, Safari and Opera */
    .hide-scroll-x::-webkit-scrollbar {
      display: none;
    }

    /* Hide scrollbar for IE, Edge and Firefox */
    .hide-scroll-x {
      -ms-overflow-style: none; /* IE and Edge */
      scrollbar-width: none; /* Firefox */
    }
  </style>
</div>
